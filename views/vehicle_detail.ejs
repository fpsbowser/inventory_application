<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <header class="nav-header-container"><%- include('partials/header')%></header>
  <body>
    <section class="upper">
      <h1 class="header-text">Vehicle Details</h1>
      <div class="edit-delete-container">
        <p id="delete-btn"><a href="<%= vehicle.url %>/delete">Delete Vehicle</a></p>
        <p id="update-btn"><a href="<%= vehicle.url %>/update">Update Vehicle</a></p>
      </div>
    </section>
    <section class="content">
      <div class="content-wrapper">
        <div class="img-template">This is a placeholder for images</div>
        <div class="vehicle-information">
          <div class="info-tile">
            <p id="model-header"><strong><%= vehicle.model %></strong></p>
          </div>
          <div class="info-tile">
            <p id="lebel">MAKE:</p>
            <p id="vehicle-info"><%= vehicle.make.name %></p>
          </div>
          <div class="info-tile">
            <p id="lebel">PRICE:</p>
            <p id="vehicle-info">$<%= vehicle.price %></p>
          </div>
          <div class="info-tile">
            <p id="lebel">COLOR:</p>
            <p id="vehicle-info"><%= vehicle.color %></p>
          </div>
          <div class="info-tile">
            <p id="lebel">MILES:</p>
            <p id="vehicle-info"><%= vehicle.miles %></p>
          </div>
          <div class="info-tile">
            <p id="lebel">TYPE:</p>
            <% if (vehicle.type == 0) { %>
            <p id="vehicle-info">Unknown</p>
            <% } %> <% vehicle.type.forEach(type => { %>
            <p id="vehicle-info"><%= type.name %></p>
            <% }) %>
          </div>
          <div class="description-tile">
            <p id="description-header">Notes</p>
            <p id="description"><%= vehicle.description %></p>
          </div>
        </div>
      </div>
    </section>
  </body>
  <script src="/javascripts/script.js"></script>
</html>
