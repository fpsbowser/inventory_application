<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <header class="nav-header-container"><%- include('partials/header')%></header>
  <body>
    <section class="upper">
      <h1 class="header-text"><%= type.name %></h1>
      <div class="edit-delete-container">
        <p id="delete-btn"><a href="<%= type.url %>/delete">Delete Type</a></p>
        <p id="update-btn"><a href="<%= type.url %>/update">Update Type</a></p>
      </div>
    </section>
    <section class="content">
      <div class="card-container">
        <% if (type_vehicles.length == 0) { %>
        <h2>
          There is currently no vehicles with the type of
          <strong><%= type.name %></strong> in inventory!
        </h2>
        <% } %> <% type_vehicles.forEach(vehicle => { %>
        <div class="card">
          <a href="<%-vehicle.url%>"><%= vehicle.model %></a>
          <p id="card-price">$<%= vehicle.price %></p>
        </div>
        <% }) %>
      </div>
    </section>
  </body>
  <script src="/javascripts/script.js"></script>
</html>
